<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:RecipeBook"
             x:Class="RecipeBook.MainPage">

    <StackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200" />
                <RowDefinition Height="200" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Text="RecipeList" BackgroundColor="Blue" Clicked="RecipeList_Button_Clicked" Grid.Row="0" Grid.Column="0" />
            <Button Text="Shopping List" BackgroundColor="Blue" Clicked="ShoppingList_Button_Clicked" Grid.Row="0" Grid.Column="1"/>
            <Button Text="New Recipe" BackgroundColor="Blue" Clicked="NewRecipe_Button_Clicked" Grid.Row="1" Grid.Column="0"/>
            <Button Text="Ingredient List" BackgroundColor="Blue" Clicked="IngredientList_Button_Clicked" Grid.Row="1" Grid.Column="1"/>
        </Grid>
    </StackLayout>
</ContentPage>
