<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeBook.RecipePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Label Text="Insert Ingredients Here" BackgroundColor="White" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" />
                <Image Source="ImageNotFound.png" Grid.Row="1" Grid.Column="0"/>
                <Label Text="Insert Description Here" BackgroundColor="White" Grid.Row="1" Grid.Column="1"/>
                <Label Text="Insert Instruction Here" BackgroundColor="White" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
            </Grid>
            <Button Text="Home Page" BackgroundColor="Blue" Clicked="Button_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>